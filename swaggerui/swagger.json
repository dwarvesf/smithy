            },
            "example": {
                "username": "aaa",
                "password": "abc"
            }
        },
        "Filter": {
            "type": "object",
            "properties": {
                "operator": {
                    "type": "string"
                },
                "column_name": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            },
            "example": {
                "operator": "=",
                "column_name": "name",
                "value": "Hieu Dep Trai"
            }
        },
        "Query": {
            "type": "object",
            "properties": {
                "fields": {
                    "type": "array",
